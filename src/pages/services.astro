---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import { services } from '../data/services';
---

<Layout title="サービス | 企業名">
  <Header />
  <main class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8">サービス</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {services.map(service => (
        <div class="p-6 border rounded-lg hover:shadow-lg transition-shadow">
          <h2 class="text-2xl font-semibold mb-4">{service.title}</h2>
          <p class="text-gray-700 mb-4">
            {service.description}
          </p>
          <a
            href={`/services/${service.id}`}
            class="inline-block text-blue-600 hover:text-blue-800 font-semibold"
          >
            詳しく見る →
          </a>
        </div>
      ))}
    </div>
  </main>
  <Footer />
</Layout> 