---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/layout/Header";
import Footer from "../../components/layout/Footer";

const news = [
  {
    id: 1,
    title: "新サービスのリリースのお知らせ",
    date: "2024-03-20",
    excerpt: "当社は新しいAIソリューションサービスをリリースしました...",
  },
  {
    id: 2,
    title: "東京オフィスの移転について",
    date: "2024-03-15",
    excerpt: "事業拡大に伴い、東京オフィスを移転することとなりました...",
  },
];
---

<Layout title="ニュース" description="企業の最新ニュースやお知らせ">
  <h1 class="mb-8 text-4xl font-bold">ニュース</h1>

  <div class="grid gap-8">
    {
      news.map(item => (
        <article class="border-b pb-6">
          <time class="text-sm text-gray-500">{item.date}</time>
          <h2 class="mt-2 text-xl font-semibold">{item.title}</h2>
          <p class="mt-2 text-gray-700">{item.excerpt}</p>
        </article>
      ))
    }
  </div>
</Layout>
